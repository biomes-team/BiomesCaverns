<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BMT_CavePlantBase">
		<defName>BMT_MortalMorelPlant</defName>
		<label>mortal morel</label>
		<description>A slow-growing mushroom which yields fungal medicine when harvested. Sowing and harvesting this fungus is both very labor-intensive tasks because of its delicate structure.</description>
		<thingClass>BMT.BiomesPlant</thingClass>
		<statBases>
			<MaxHitPoints>60</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<Flammability>0.35</Flammability>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
			<optimalTemperature>-10~60</optimalTemperature>
			</li>
		</modExtensions>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/MortalMorel</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilityMin>1.0</fertilityMin>
			<wildClusterRadius>4</wildClusterRadius>
			<growDays>10</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestWork>400</harvestWork>
			<harvestYield>1</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>BMT_MedicineFungal</harvestedThingDef>
			<sowMinSkill>8</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>BMT_Fungiponics</li>
			</sowTags>
			<topWindExposure>0</topWindExposure>
			<wildOrder>2</wildOrder>
			<neverBlightable>false</neverBlightable>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<purpose>Health</purpose>
			<interferesWithRoof>false</interferesWithRoof>
		</plant>
	</ThingDef>
	<ThingDef ParentName="MedicineBase">
		<defName>BMT_MedicineFungal</defName>
		<label>fungal medicine</label>
		<description>A pack of fungal concoctions extracted from the mortal morel. It is less potent than industrial pharmaceuticals, but much better than nothing.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Item/Crops/MortalMorel</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<MarketValue>10</MarketValue>
			<Mass>0.35</Mass>
			<Flammability>1.3</Flammability>
			<MedicalPotency>0.60</MedicalPotency>
			<MedicalQualityMax>0.70</MedicalQualityMax>
			<DeteriorationRate>6</DeteriorationRate>
		</statBases>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>150</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<allowedArchonexusCount>20</allowedArchonexusCount>
	</ThingDef>
	<RecipeDef>
		<defName>BMT_IndustrialMedicineFromFungal</defName>
		<label>make medicine from fungal medicine</label>
		<description>Make medicine.</description>
		<jobString>Making medicine.</jobString>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<workAmount>600</workAmount>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<researchPrerequisite>MedicineProduction</researchPrerequisite>
		<skillRequirements>
			<Crafting>4</Crafting>
			<Intellectual>4</Intellectual>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BMT_MedicineFungal</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<MedicineIndustrial>1</MedicineIndustrial>
		</products>
		<soundWorking>Recipe_Drug</soundWorking>
	</RecipeDef>
	<RecipeDef>
		<defName>BMT_IndustrialMedicineFromFungal4c</defName>
		<label>make medicine from fungal medicine x4</label>
		<description>Make medicine.</description>
		<jobString>Making medicine.</jobString>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<workAmount>2100</workAmount>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<researchPrerequisite>MedicineProduction</researchPrerequisite>
		<skillRequirements>
			<Crafting>4</Crafting>
			<Intellectual>4</Intellectual>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BMT_MedicineFungal</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Neutroamine</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
		</ingredients>
		<products>
			<MedicineIndustrial>4</MedicineIndustrial>
		</products>
		<soundWorking>Recipe_Drug</soundWorking>
	</RecipeDef>
</Defs>