<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BMT_CaveTreeBase">
		<defName>BMT_Candlesnuff</defName>
		<label>candlesnuff</label>
		<description>An ash pale mushroom tree. It is slow-growing but can survive the intense heat of the nearby magma.</description>
		<thingClass>BMT.BiomesPlant</thingClass>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Candlesnuff/CandlesnuffGrown</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Flammability>0.0</Flammability>
			<Beauty>1</Beauty>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.5~0.99</growingHours>
				<optimalTemperature>37.7778~352.222</optimalTemperature>
			</li>
		</modExtensions>
		<plant>
			<immatureGraphicPath>BMT_Caverns/Things/Plant/Candlesnuff/CandlesnuffImmature</immatureGraphicPath>
			<fertilityMin>0.7</fertilityMin>
			<fertilitySensitivity>0.7</fertilitySensitivity>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>1000</wildClusterWeight>
			<growDays>12</growDays>
			<topWindExposure>0</topWindExposure>
			<dieIfLeafless>false</dieIfLeafless>
			<harvestWork>700</harvestWork>
			<harvestYield>12</harvestYield>
			<wildOrder>3</wildOrder>
			<neverBlightable>true</neverBlightable>
			<treeLoversCareIfChopped>true</treeLoversCareIfChopped>
		</plant>

	</ThingDef>

</Defs>