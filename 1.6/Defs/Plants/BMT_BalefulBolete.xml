<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="PlantBase">
		<defName>BMT_BalefulBolete</defName>
		<label>baleful bolete</label>
		<description>A big blue capped mushroom that grows to roughly the size of a bush. It's often used as growable decor.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/BalefulBolete</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Beauty>12</Beauty>
			<Nutrition>1.25</Nutrition>
			<Flammability>0.35</Flammability>
		</statBases>
		<altitudeLayer>Building</altitudeLayer>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.5~0.99</growingHours>
			</li>
		</modExtensions>
		<selectable>true</selectable>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<visualSizeRange>0.3~0.7</visualSizeRange>
			<topWindExposure>0</topWindExposure>
			<wildClusterRadius>8</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<wildOrder>3</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<interferesWithRoof>false</interferesWithRoof>
		</plant>
	</ThingDef>
</Defs>