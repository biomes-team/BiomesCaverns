<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>BMT_Gleamtip</defName>
		<label>gleamtip</label>
		<description>A mushroom species with long narrow glowing caps. They are considered an alternative to flowers by cave dwellers.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Gleamtip</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.7~0.3</growingHours>
			</li>
		</modExtensions>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<Flammability>0.35</Flammability>
		</statBases>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>3.5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.2~0.4</visualSizeRange>
			<topWindExposure>0.0</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<interferesWithRoof>false</interferesWithRoof>
		</plant>
	</ThingDef>

</Defs>