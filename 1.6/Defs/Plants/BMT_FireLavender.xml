		<thingClass>BMT.BiomesPlant</thingClass>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/FireLavender</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Nutrition>1.0</Nutrition>
			<Flammability>0.0</Flammability>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.5~0.99</growingHours>
				<optimalTemperature>37.7778~352.222</optimalTemperature>
			</li>
		</modExtensions>
		<ingestible/>
		<plant>
			<growMinGlow>0.5</growMinGlow>
			<growOptimalGlow>0.5</growOptimalGlow>
			<fertilitySensitivity>0.5</fertilitySensitivity>
