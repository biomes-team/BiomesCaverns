	<ThingDef ParentName="EggFertBase">
		<defName>BMT_EggGoetoFertilized</defName>
		<label>goeto toad egg (fert.)</label>
		<description>A fertilized goeto egg. If all goes well, it should hatch into a goeto toad. It can be eaten raw, but it's much better cooked.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Item/Eggs/GoetoToadEggs</texPath>
			<drawSize>0.75</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>7.0</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>3.5</hatcherDaystoHatch>
				<hatcherPawn>BMT_Goeto</hatcherPawn>
			</li>
		</comps>
	</ThingDef>
