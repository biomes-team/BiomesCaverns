		<graphicData>
			<texPath>BMT_Caverns/Things/Item/Eggs/GoetoToadEggs</texPath>
			<drawSize>0.75</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>7.0</MarketValue>
		</statBases>
	</ThingDef>
</Defs>
