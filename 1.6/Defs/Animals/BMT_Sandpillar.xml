<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Larvae -->
	<ThingDef ParentName="AnimalThingBase">
		<defName>BMT_SandPillar</defName>
		<label>sandpillar</label>
		<description>Similarly to some species of salamander, this colossal caterpillar stays in its juvenile state for life but remains able to reproduce despite this.</description>
		<statBases>
			<MoveSpeed>4.4</MoveSpeed>
			<MarketValue>100</MarketValue>
			<ComfyTemperatureMin>-25</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<CaravanRidingSpeedFactor>1.3</CaravanRidingSpeedFactor>
		</statBases>
		<race>
			<hasGenders>true</hasGenders>
			<fleshType>Insectoid</fleshType>
			<bloodDef>Filth_BloodInsect</bloodDef>
			<useMeatFrom>Megaspider</useMeatFrom>
			<leatherDef>BMT_MediumChitin</leatherDef>
			<baseBodySize>0.8</baseBodySize>
			<baseHealthScale>0.8</baseHealthScale>
			<baseHungerRate>0.5</baseHungerRate>
			<foodType>VegetarianRoughAnimal</foodType>
			<wildness>0.15</wildness>
			<roamMtbDays>2.75</roamMtbDays>
			<trainability>None</trainability>
			<lifeExpectancy>0.5</lifeExpectancy>
			<manhunterOnTameFailChance>0.05</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.40</manhunterOnDamageChance>
			<body>BMT_LarvaLike</body>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
			<lifeStageAges>
				<li>
					<def>BMT_EusocialInsectNymphFirst</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_EusocialInsectNymphSecond</def>
					<minAge>0.08</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.25</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>Pawn_Megascarab_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
		</race>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_EggSandpillarFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>4.5</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>1~2</eggCountRange>
			</li>
		</comps>
		<tools>
			<li>
				<label>mandibles</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<tradeTags>
			<li>AnimalUncommon</li>
			<li>AnimalInsect</li>
		</tradeTags>
	</ThingDef>
	<PawnKindDef ParentName="AnimalKindBase">
		<defName>BMT_SandPillar</defName>
