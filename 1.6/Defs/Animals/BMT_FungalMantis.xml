<Defs>

	<!-- ================== Insects ================== -->

	<ThingDef ParentName="BaseInsect">
		<defName>BMT_FungalMantis</defName>
		<label>fungal mimic mantis</label>
		<description>A native to the fungal forest caverns, this mantis is larger than a person. It uses its fungus-covered carapace as camouflage while hunting. Unlike other mantises, they rely on their attacks injecting anesthetic and poisonous chemicals into prey.</description>
		<statBases>
			<MoveSpeed>3.75</MoveSpeed>
			<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.45</ArmorRating_Sharp>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>60</ComfyTemperatureMax>
			<MarketValue>150</MarketValue>
			<FilthRate>7</FilthRate>
		</statBases>
		<uiIconScale>2</uiIconScale>
		<tools>
			<li>
				<label>mandibles</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
				<chanceFactor>0.6</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>25</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>left scythe</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>BMT_FrontLeftScythe</linkedBodyPartsGroup>
				<extraMeleeDamages>
					<li>
						<def>BMT_ToxicSpores</def>
						<amount>5</amount>
					</li>
				</extraMeleeDamages>
			</li>
			<li>
				<label>right scythe</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>7</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>BMT_FrontRightScythe</linkedBodyPartsGroup>
				<extraMeleeDamages>
					<li>
						<def>BMT_StunningSpores</def>
						<amount>5</amount>
					</li>
				</extraMeleeDamages>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>3</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.1</chanceFactor>
			</li>
		</tools>
		<comps>
			<li Class="CompProperties_EggLayer">
				<eggFertilizedDef>BMT_FungalMantisEggFertilized</eggFertilizedDef>
				<eggFertilizationCountMax>1</eggFertilizationCountMax>
				<eggLayIntervalDays>20</eggLayIntervalDays>
				<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
				<eggCountRange>
					<min>1</min>
					<max>5</max>
				</eggCountRange>
			</li>
		</comps>
		<race>
			<body>BMT_MantisLike</body>
			<predator>true</predator>
			<herdAnimal>false</herdAnimal>
			<maxPreyBodySize>2.3</maxPreyBodySize>
			<petness>0.5</petness>
			<baseBodySize>2.0</baseBodySize>
			<baseHungerRate>0.25</baseHungerRate>
			<baseHealthScale>2</baseHealthScale>
			<fleshType>Insectoid</fleshType>
			<bloodDef>Filth_BloodInsect</bloodDef>
			<useMeatFrom>Megaspider</useMeatFrom>
			<trainability>Advanced</trainability>
			<wildness>0.95</wildness>
			<manhunterOnTameFailChance>0.35</manhunterOnTameFailChance>
			<manhunterOnDamageChance>0.35</manhunterOnDamageChance>
			<leatherDef>BMT_MediumChitin</leatherDef>
			<lifeExpectancy>10</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>BMT_EusocialInsectNymphFirst</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>BMT_EusocialInsectNymphSecond</def>
					<minAge>0.03</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>0.4</minAge>
					<soundWounded>Pawn_Megascarab_Wounded</soundWounded>
					<soundDeath>Pawn_Megascarab_Death</soundDeath>
					<soundCall>BMT_Pawn_Mantis_Call</soundCall>
					<soundAngry>Pawn_Megascarab_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>AnimalInsect</li>
		</tradeTags>
		<butcherProducts>
			<BMT_FungalMantisClaw>2</BMT_FungalMantisClaw>
		</butcherProducts>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_AnimalControl"/>
		</modExtensions>
	</ThingDef>

