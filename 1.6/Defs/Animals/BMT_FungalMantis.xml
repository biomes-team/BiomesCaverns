	<ThingDef ParentName="EggFertBase">
		<defName>BMT_FungalMantisEggFertilized</defName>
		<label>fungal mimic mantis egg (fert.)</label>
		<description>A fertilized fungal mantis egg. If all goes well, it should hatch into a mantis larvae. It can be eaten raw, but it's much better cooked.</description>
		<graphicData>
			<texPath>BMT_Core/Things/Item/Eggs/OvoidBugEggs</texPath>
			<color>(209,134,70)</color>
			<drawSize>0.8</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>40</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Hatcher">
				<hatcherDaystoHatch>5.5</hatcherDaystoHatch>
				<hatcherPawn>BMT_FungalMantis</hatcherPawn>
			</li>
		</comps>
	</ThingDef>

