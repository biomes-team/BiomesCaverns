<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="TorchLamp">
	<defName>BMT_CrystalTorch</defName>
	<label>crystal torch</label>
	<description>A specially-treated torch that produces a light over a large area.</description>
	<graphicData>
	  <texPath>BMT_Caverns/Things/Building/CrystalTorch</texPath>
	  <graphicClass>Graphic_Random</graphicClass>
	</graphicData>
	<uiIconPath>BMT_Caverns/Things/Building/CrystalTorch/Artboard1</uiIconPath>
	<minifiedDef>MinifiedThing</minifiedDef>
	<tickerType>Never</tickerType>
	<statBases>
	  <Mass>1</Mass>
	  <WorkToBuild>18000</WorkToBuild>
	</statBases>
	<costList Inherit="False">
	  <BMT_ResourceBlueCrystal>30</BMT_ResourceBlueCrystal>
	</costList>
	<thingCategories>
	  <li>BuildingsMisc</li>
	</thingCategories>
	<comps Inherit="False">
	  <li Class="CompProperties_Glower">
		<glowRadius>10</glowRadius>
		<glowColor>(154, 207, 246, 0)</glowColor>
	  </li>
	</comps>
	<placeWorkers Inherit="False">
	  <!-- <li>PlaceWorker_Heater</li> -->
	  <!-- <li>PlaceWorker_MeditationOffsetBuildingsNear</li> -->
	</placeWorkers>
	<drawPlaceWorkersWhileSelected>false</drawPlaceWorkersWhileSelected>
  </ThingDef>

