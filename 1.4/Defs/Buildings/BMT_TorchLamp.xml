  <ThingDef ParentName="TorchLamp">
	<defName>BMT_GlowGooTorch</defName>
	<label>glow goo torch</label>
	<description>A specially-treated torch that produces a light over a large area.</description>
	<graphicData>
	  <texPath>BMT_Caverns/Things/Building/GlowGooLamp</texPath>
	  <graphicClass>Graphic_Random</graphicClass>
	</graphicData>
	<uiIconPath>BMT_Caverns/Things/Building/GlowGooLamp/Artboard1</uiIconPath>
	<minifiedDef>MinifiedThing</minifiedDef>
	<statBases>
	  <Mass>1</Mass>
	  <!-- <WorkToBuild>6000</WorkToBuild> -->
	</statBases>
	<costList Inherit="False">
	  <BMT_GlowGoo>20</BMT_GlowGoo>
	</costList>
	<thingCategories>
	  <li>BuildingsMisc</li>
	</thingCategories>
	<comps Inherit="False">
	  <li Class="CompProperties_Glower">
		<glowRadius>10</glowRadius>
		<glowColor>(222, 245, 158, 0)</glowColor>
	  </li>
	  <li Class="CompProperties_Refuelable">
		<fuelConsumptionRate>1.5</fuelConsumptionRate>
		<fuelCapacity>20.0</fuelCapacity>
		<initialFuelPercent>0.1</initialFuelPercent>
		<fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
		<fuelFilter>
		  <thingDefs>
			<li>BMT_GlowGoo</li>
		  </thingDefs>
		</fuelFilter>
		<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
	  </li>
	</comps>
	<placeWorkers Inherit="False">
	  <!-- <li>PlaceWorker_Heater</li> -->
	  <!-- <li>PlaceWorker_MeditationOffsetBuildingsNear</li> -->
	</placeWorkers>
