<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="PlantBaseNonEdible">
    <defName>BMT_Chromacap</defName>
    <label>chromacap</label>
    <description>A genetically-engineered mushroom-like crop reminescent of Tinctoria which secretes a self-altering dye. This dye can be coaxed into different colors and used to change the color of walls, buildings, and more.</description>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
	<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.5~0.99</growingHours>
			</li>
	</modExtensions>
    <graphicData>
      <texPath>BMT_Caverns/Things/Plant/Chromacap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>14</pathCost>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <sowWork>540</sowWork>
      <growMinGlow>0</growMinGlow>
	  <growOptimalGlow>0</growOptimalGlow>
	  <fertilitySensitivity>0.5</fertilitySensitivity>
	  <fertilityMin>0.05</fertilityMin>
	  <maxMeshCount>4</maxMeshCount>
      <topWindExposure>0</topWindExposure>
      <growDays>2</growDays>
      <lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
      <allowAutoCut>false</allowAutoCut>
      <wildClusterWeight>0</wildClusterWeight>
      <harvestedThingDef>Dye</harvestedThingDef>
      <harvestYield>1</harvestYield>
      <harvestTag>Standard</harvestTag>
      <purpose>Misc</purpose>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
	  <interferesWithRoof>false</interferesWithRoof>
    </plant>
  </ThingDef>
</Defs>
