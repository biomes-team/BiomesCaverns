<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="PlantBase">
        <defName>BMT_CrimsonCap</defName>
        <label>crimson cap</label>
        <description>A big crimson-capped mushroom. It is sometimes mistakenly identified as Dulcis by inexperienced mushroom pickers.</description>
        <graphicData>
            <texPath>BMT_Caverns/Things/Plant/CrimsonCap</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <Nutrition>1.25</Nutrition>
            <Flammability>0.35</Flammability>
        </statBases>
        <modExtensions>
            <li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
                <growingHours>0.5~0.99</growingHours>
            </li>
        </modExtensions>
        <ingestible/>
        <selectable>true</selectable>
        <plant>
            <growMinGlow>0</growMinGlow>
            <growOptimalGlow>0</growOptimalGlow>
            <fertilitySensitivity>0.5</fertilitySensitivity>
            <growDays>5</growDays>
            <fertilityMin>0.05</fertilityMin>
            <maxMeshCount>4</maxMeshCount>
            <visualSizeRange>0.6~0.7</visualSizeRange>
            <topWindExposure>0.2</topWindExposure>
            <wildClusterRadius>8</wildClusterRadius>
            <wildClusterWeight>8</wildClusterWeight>
            <wildOrder>3</wildOrder>
            <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RawFungus</harvestedThingDef>
            <harvestYield>2</harvestYield>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <interferesWithRoof>false</interferesWithRoof>
        </plant>
    </ThingDef>
</Defs>