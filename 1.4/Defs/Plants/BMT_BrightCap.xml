<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	
	<ThingDef ParentName="BMT_CaveTreeBase">
		<defName>BMT_Brightcap</defName>
		<label>brightcap</label>
		<description>A brightly-glowing mushroom. It was engineered during early caveworld colonization efforts to provide constant natural light.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/BrightCap</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<Flammability>0.0</Flammability>
			<Beauty>2</Beauty>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.5~0.99</growingHours>
				<optimalTemperature>-50~352.222</optimalTemperature>
			</li>
		</modExtensions>
		<plant>
			<fertilityMin>0.1</fertilityMin>
			<fertilitySensitivity>0.1</fertilitySensitivity>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>1000</wildClusterWeight>
			<growDays>5</growDays>
			<topWindExposure>0</topWindExposure>
			<dieIfLeafless>false</dieIfLeafless>
			<harvestWork>700</harvestWork>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<harvestYield>1</harvestYield>
			<wildOrder>3</wildOrder>
			<neverBlightable>true</neverBlightable>
			<treeLoversCareIfChopped>false</treeLoversCareIfChopped>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
		</plant>

	<comps>
      <li Class="CompProperties_Glower">
        <glowRadius>7</glowRadius>
        <glowColor>(147,207,80,0)</glowColor>
      </li>
    </comps>
	</ThingDef>

</Defs>