<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="PlantBase">
		<defName>BMT_RimeFlower</defName>
		<label>rime flower</label>
		<description>While this cold adapted flower can survive without nearly any light, it grows best with at least a little illumination.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/RimeFlower</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>45</MaxHitPoints>
			<Beauty>12</Beauty>
			<BeautyOutdoors>14</BeautyOutdoors>
			<Nutrition>1.0</Nutrition>
		</statBases>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.6~0.1</growingHours>
			</li>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<optimalTemperature>-50~10</optimalTemperature>
			</li>
		</modExtensions>
		<selectable>true</selectable>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0.25</growOptimalGlow>
			<mustBeWildToSow>true</mustBeWildToSow>
			<fertilitySensitivity>0.5</fertilitySensitivity>
			<growDays>5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.3~0.7</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>8</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<wildOrder>3</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
			<sowTags>
				<li>Ground</li>
				<li>Decorative</li>
			</sowTags>
			<interferesWithRoof>false</interferesWithRoof>
			<purpose>Beauty</purpose>
		</plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
    </comps>
	</ThingDef>
</Defs>