<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="PlantBase">
    <defName>BMT_GlowingSucculent</defName>
    <label>glimmering cactus</label>
    <description>A bioluminescent succulent species that grows in the caverns below deserts.</description>
	<statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
	  <Beauty>15</Beauty>
	  <BeautyOutdoors>15</BeautyOutdoors>
    </statBases>
    <graphicData>
      <texPath>BMT_Caverns/Things/Plant/GlowSucculent</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <!-- <drawSize>1.6</drawSize> -->
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.42)</offset>
      </shadowData>
    </graphicData>
	<selectable>true</selectable>
	<pathCost>30</pathCost>
    <ingestible />
    <plant>
	  <dieIfLeafless>true</dieIfLeafless>
	  <growMinGlow>0</growMinGlow>
	  <growOptimalGlow>0</growOptimalGlow>
      <growDays>4</growDays>
	  <topWindExposure>0</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildClusterRadius>8</wildClusterRadius>
      <wildClusterWeight>170</wildClusterWeight>
	  <wildOrder>2</wildOrder>
    </plant>
  </ThingDef>
  
  

</Defs>
