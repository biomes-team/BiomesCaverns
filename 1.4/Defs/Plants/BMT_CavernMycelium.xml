<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>BMT_CavernMycelium</defName>
		<label>mycelium</label>
		<description>Extremely wide-spread mycelium of many different species that have spread throughout the caverns of the Rim. Herbivores tend to eat it in the wild.</description>
		<graphicData>
			<texPath>BMT_Caverns/Things/Plant/Mycelium</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<modExtensions>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<growingHours>0.7~0.3</growingHours>
			</li>
			<li Class="BiomesCore.DefModExtensions.Biomes_PlantControl">
				<optimalTemperature>0~352.222</optimalTemperature>
			</li>
		</modExtensions>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<Flammability>0.35</Flammability>
		</statBases>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>3.5</growDays>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.2~0.4</visualSizeRange>
			<topWindExposure>0.0</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<!-- <wildClusterWeight>700</wildClusterWeight> -->
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<interferesWithRoof>false</interferesWithRoof>
			<sowResearchPrerequisites>
				<li>BMT_ResearchMushrooms</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>BMT_MycelialBlocks</harvestedThingDef>
			<harvestYield>1</harvestYield>
			<purpose>Misc</purpose>
		</plant>
	</ThingDef>

</Defs>